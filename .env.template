# =============================================================================
# NETIA PAPERCUPS - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains secrets!

# =============================================================================
# NECESSARY - Core Application Settings
# =============================================================================

# Database Configuration (Railway will override DATABASE_URL)
DATABASE_URL=ecto://postgres:postgres@localhost/papercups_prod
POOL_SIZE=10
REQUIRE_DB_SSL=true

# Security - Generate your own secrets!
SECRET_KEY_BASE=YOUR_SECRET_KEY_BASE_HERE_MUST_BE_AT_LEAST_64_BYTES
SECRET_KEY_BASE_DEV=YOUR_DEV_SECRET_KEY_BASE_HERE

# Application URLs - Netia Domains
BACKEND_URL=papercups.netia.ai
REACT_APP_URL=papercups.netia.ai
REACT_APP_FILE_UPLOADS_ENABLED=1

# Production Environment
MIX_ENV=prod
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# NECESSARY - Multi-Tenant Integration
# =============================================================================

# Your API Integration - Netia Domains
NETIA_API_URL=https://api.netia.ai
NETIA_WEBHOOK_URL=https://api.netia.ai/papercups/webhook
NETIA_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# Multi-tenant Configuration
MULTI_TENANT_MODE=true
DEFAULT_ACCOUNT_NAME=Netia Multi-Tenant
AUTO_CREATE_ACCOUNTS=true

# =============================================================================
# OPTIONAL - Email Configuration
# =============================================================================

# SMTP Settings (Configure with your email provider)
SMTP_ADAPTER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@netia.ai

# =============================================================================
# OPTIONAL - File Storage
# =============================================================================

# AWS S3 (if using file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BUCKET_NAME=your-papercups-bucket
AWS_REGION=us-east-1

# =============================================================================
# OPTIONAL - External Integrations
# =============================================================================

# Slack Integration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Google Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# OPTIONAL - Monitoring & Analytics
# =============================================================================

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# RAILWAY SPECIFIC
# =============================================================================

# Railway will automatically set these:
# PORT=${{PORT}}
# DATABASE_URL=${{Postgres.DATABASE_URL}}

# Additional Railway optimizations
RAILWAY_ENVIRONMENT=production
RAILWAY_STATIC_URL=papercups.netia.ai
